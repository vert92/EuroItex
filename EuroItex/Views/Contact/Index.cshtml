<section id="contact-page">
    <div class="container">
        <div class="center">
            <h2>@ViewRes.ContactStrings.MailTitle</h2>
            <p class="lead">@ViewRes.ContactStrings.MailText</p>
        </div>
        <div class="row contact-wrap">
            <div class="status alert alert-success" style="display: none"></div>
          @using(Html.BeginForm("Send","Contact"))
          { 
                <div class="col-sm-5 col-sm-offset-1">
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Name</label>
                        <input type="text" name="name" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Email</label>
                        <input type="email" name="email" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Phone</label>
                        <input type="number" name="phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Company/label>
                        <input type="text" name="company" class="form-control">
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Subject</label>
                        <input type="text" name="subject" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <label>@ViewRes.ContactStrings.Message</label>
                        <textarea name="message" id="message" required="required" class="form-control" rows="8"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">@ViewRes.ContactStrings.Submit</button>
                    </div>
                </div>
           }
        </div><!--/.row-->
    </div><!--/.container-->
</section><!--/#contact-page-->
